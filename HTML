    <script>
        function loadPage(page) {
            let content = '';
            if (page === 'home') {
                content = `
                    <h1>Home</h1>
                    <p>Meet the team!</p>
                    <div class="people-section">
                        <div class="person">
                            <img src="https://via.placeholder.com/150" alt="Person 1">
                            <h4>Person 1</h4>
                            <p>Position: CEO</p>
                            <p>Description: Person 1 has been leading the company for over 10 years, bringing innovation and leadership.</p>
                        </div>
                        <div class="person">
                            <img src="https://via.placeholder.com/150" alt="Person 2">
                            <h4>Person 2</h4>
                            <p>Position: CTO</p>
                            <p>Description: Person 2 oversees the technological direction of the company, ensuring we stay ahead of the curve.</p>
                        </div>
                        <div class="person">
                            <img src="https://via.placeholder.com/150" alt="Person 3">
                            <h4>Person 3</h4>
                            <p>Position: CFO</p>
                            <p>Description: Person 3 manages the company’s financial strategy and planning, ensuring growth and sustainability.</p>
                        </div>
                        <div class="person">
                            <img src="https://via.placeholder.com/150" alt="Person 4">
                            <h4>Person 4</h4>
                            <p>Position: COO</p>
                            <p>Description: Person 4 ensures smooth operations across all company departments, focusing on efficiency and effectiveness.</p>
                        </div>
                    </div>
                `;
            } else if (page === 'about') {
                content = '<h1>About</h1><p>This is the about section of the website.</p>';
            } else if (page === 'services') {
                content = '<h1>Services</h1><p>Here are the services we offer.</p>';
            } else if (page === 'contact') {
                content = '<h1>Contact</h1><p>Get in touch with us!</p>';
            } else {
                content = `<h1>${page}</h1><p>This is the content for ${page}.</p>`;
            }
            document.getElementById('mainContent').innerHTML = content;
        }

        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('shifted');
        }

        // Load the home page by default
        document.addEventListener('DOMContentLoaded', function () {
            loadPage('home');
        });
    </script>
